{
  "name": "playwright-template",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "install:browsers": "playwright install --with-deps",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "test:file": "cross-env ENV=local SKIP_AUTH=1 playwright test --project=chromium",
    "test:todo": "cross-env ENV=local SKIP_AUTH=1 BASE_URL=https://demo.playwright.dev playwright test tests/e2e/todo.spec.js --project=chromium",
    "test:local": "cross-env ENV=local playwright test",
    "test:staging": "cross-env ENV=staging playwright test",
    "test:prod": "cross-env ENV=prod playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:headed": "cross-env ENV=local playwright test --project=chromium --headed --slow-mo=200",
    "trace": "playwright show-trace"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "cross-env": "^7.0.3"
  }
}
